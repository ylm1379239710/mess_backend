    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        b.id, b.url, b.img, b.title
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findBannerAll" resultMap="bannerMap">
        SELECT
            <include refid="allColumns" />
        FROM banner b
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findBannerByCondition" resultMap="bannerMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM banner b WHERE 1 = 1
        <if test="url != null and url != ''">
            AND b.url LIKE CONCAT('%', #{url}, '%')
        </if>
        <if test="img != null and img != ''">
            AND b.img LIKE CONCAT('%', #{img}, '%')
        </if>
        <if test="title != null and title != ''">
            AND b.title LIKE CONCAT('%', #{title}, '%')
        </if>
    </select>

    <!-- 根据主键查询信息 -->
    <select id="findBannerByIds" resultMap="bannerMap" parameterType="list">
        SELECT
            <include refid="allColumns" />
        FROM banner b WHERE b.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 新增信息 -->
    <insert id="addBanner">
        INSERT INTO banner (
            id, url, img, title
        ) VALUES (
            #{id},
            #{url},
            #{img},
            #{title}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addBanners" parameterType="list">
        INSERT INTO banner (
            id, url, img, title
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.url},
                #{item.img},
                #{item.title}
            )
        </foreach>
    </insert>

    <!-- 修改信息 -->
    <update id="updateBanner">
        UPDATE banner
        <set>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="title != null">
                title = #{title}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量修改信息 -->
    <update id="updateBanners" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE banner
            <set>
                <if test="item.url != null">
                    url = #{item.url},
                </if>
                <if test="item.img != null">
                    img = #{item.img},
                </if>
                <if test="item.title != null">
                    title = #{item.title}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键删除 -->
    <delete id="deleteBannerById" parameterType="string">
        DELETE FROM banner WHERE id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="deleteBannerByIds" parameterType="list">
        DELETE FROM banner WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
